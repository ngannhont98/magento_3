<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:helloworld:Magento_Widget:etc/widget.xsd">
    <widget class="Smartosc\Announcements\Block\Widget\Image" id="smartosc_announcements_image">
        <label>Announcements Image</label>
        <parameters>
            <parameter name="text_image" sort_order="10" visible="true" xsi:type="text">
                <label>Text Image</label>
            </parameter>
            <parameter name="smartosc_announcements_widget_image" xsi:type="block" visible="true" sort_order="10">
                <label translate="true">Image</label>
                <description translate="true">Choose a image to diplay in Announcement section</description>
                <block class="Smartosc\Announcements\Block\Widget\adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>